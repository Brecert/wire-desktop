{
  "build": {
    "directories": {
      "app": "electron",
      "buildResources": "resources",
      "output": "wrap/dist"
    }
  },
  "dependencies": {
    "debug": "3.1.0"
  },
  "devDependencies": {
    "babel-core": "6.26.3",
    "babel-jest": "23.4.2",
    "babel-loader": "7.1.5",
    "babel-plugin-transform-object-rest-spread": "6.26.0",
    "babel-preset-es2015": "6.24.1",
    "babel-preset-react": "6.24.1",
    "css-loader": "1.0.0",
    "electron": "1.8.8",
    "electron-builder": "20.28.3",
    "electron-mocha": "6.0.4",
    "electron-packager": "12.1.1",
    "electron-winstaller": "2.5.2",
    "eslint": "5.5.0",
    "eslint-config-prettier": "3.0.1",
    "eslint-plugin-prettier": "2.6.2",
    "eslint-plugin-react": "7.11.1",
    "grunt": "1.0.3",
    "grunt-contrib-clean": "1.1.0",
    "grunt-git": "1.0.9",
    "grunt-gitinfo": "0.1.8",
    "husky": "0.14.3",
    "jest": "23.5.0",
    "lint-staged": "7.2.2",
    "load-grunt-tasks": "4.0.0",
    "prettier": "1.14.2",
    "sinon": "6.1.5",
    "style-loader": "0.23.0",
    "webpack": "4.17.2",
    "webpack-cli": "3.1.0"
  },
  "license": "LicenseRef-LICENSE",
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ],
    "*.{json,md,css}": [
      "prettier --write",
      "git add"
    ]
  },
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/wireapp/wire-desktop.git"
  },
  "scripts": {
    "build:linux": "grunt linux-prod",
    "build:macos": "grunt macos-prod",
    "build:win": "grunt win-prod",
    "bundle:dev": "webpack",
    "bundle": "webpack --env.production",
    "edge": "yarn prestart && electron electron --inspect --devtools --enable-logging --env=https://wire-webapp-edge.zinfra.io",
    "fix:js": "yarn test:js -- --fix",
    "fix:other": "yarn prettier -- --write",
    "fix": "yarn fix:js && yarn fix:other",
    "jest": "jest",
    "localhost": "yarn prestart && electron electron --inspect --devtools --enable-logging --env=http://localhost:8080/app",
    "precommit": "lint-staged",
    "preinstall": "cd electron && yarn",
    "prestart": "yarn bundle:dev",
    "prettier": "prettier \"**/*.{json,md,css}\"",
    "prod": "yarn prestart && electron electron --inspect --devtools --enable-logging --env=https://app.wire.com",
    "staging": "yarn prestart && electron electron --inspect --devtools --enable-logging --env=https://wire-webapp-staging.zinfra.io",
    "start": "electron electron --inspect --devtools --enable-logging",
    "test:js": "eslint -c .eslintrc.json --ignore-path .gitignore --ignore-path .eslintignore \"**/*.js\"",
    "test:main": "electron-mocha --reporter spec tests/main",
    "test:other": "yarn prettier -- --list-different",
    "test:react": "jest",
    "test": "yarn test:other && yarn test:js && yarn test:react && yarn test:main"
  }
}
